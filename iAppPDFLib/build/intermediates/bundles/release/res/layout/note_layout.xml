<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notelist_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#efadd8ee"
    >

    <RelativeLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >
        <ImageView 
            android:id="@+id/progress_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/loading"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="数据加载中..."
            android:textSize="22sp"
            android:textColor="@android:color/background_dark"
            android:layout_below="@id/progress_img"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    
    <TextView
        android:id="@+id/no_data_prompt"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:textSize="22sp"
        android:visibility="gone"
        android:text="没有数据"
        android:textColor="@android:color/background_dark"
        android:layout_centerInParent="true"
        android:gravity="center">
        
    </TextView>
    
    <LinearLayout 
        android:id="@+id/list_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <include layout="@layout/note_listview_head_layout"/>
        
        <ListView
          android:id="@+id/annot_list"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
        </ListView>
    </LinearLayout>
    
</RelativeLayout><!-- From: file:/D:/DEMO/trunk/iAppPDFLib/res/layout/note_layout.xml -->