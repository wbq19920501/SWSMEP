<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/eben_border_all_corners">
    <LinearLayout
        android:id="@+id/record_layout"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:padding="15dip"
	    android:gravity="center">
	    <ImageButton
	        android:id="@+id/btn_record"
	        android:layout_width="24dp"
	        android:layout_height="24dp"
    		android:layout_marginRight="10dip"
	        android:background="@drawable/eben_bg_record" />
	    <ImageButton
	        android:id="@+id/btn_stop"
	        android:layout_width="24dp"
	        android:layout_height="24dp"
    		android:layout_marginRight="10dip"
	        android:background="@drawable/eben_bg_stop"
	        android:visibility="gone"/>    
	    <LinearLayout
	        android:id="@+id/alert_layout"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"        
		    android:layout_weight="1"
    		android:padding="5dip"
		    android:gravity="center"
		    android:background="@drawable/eben_border_left_right">    
		    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/sound_annot_title"        
			        android:textSize="16sp"
			        android:textColor="#78694e"/>
	    </LinearLayout>
	    <LinearLayout
	        android:id="@+id/time_layout"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"        
		    android:layout_weight="1"
    		android:padding="5dip"
		    android:gravity="center"
		    android:background="@drawable/eben_border_left_right"
		    android:visibility="gone">
	    
		    <TextView
		        android:id="@+id/rcd_time_h"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="00"        
		        android:textSize="16sp"
		        android:textColor="#78694e"/>
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text=":"        
		        android:textSize="16sp"
		        android:textColor="#78694e"/>
		    <TextView
		        android:id="@+id/rcd_time_m"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="00"        
		        android:textSize="16sp"
		        android:textColor="#78694e"/>
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text=":"        
		        android:textSize="16sp"
		        android:textColor="#78694e"/>
		    <TextView
		        android:id="@+id/rcd_time_s"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="00"        
		        android:textSize="16sp"
		        android:textColor="#78694e"/>
		</LinearLayout>
	    
	    <ImageView
			android:id="@+id/sound_volume"
			android:layout_width="24dp"
			android:layout_height="24dp"
    		android:layout_marginLeft="10dip"
			android:src="@drawable/eben_bg_voice"/> 
			
		<ImageButton
			android:id="@+id/btn_shutdown"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:layout_marginLeft="10dip"
			android:background="@drawable/eben_bg_close"/>	
	</LinearLayout>
	<LinearLayout
        android:id="@+id/play_layout"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:padding="15dip"
	    android:visibility="gone">
	    <ImageButton
	        android:id="@+id/btn_play"
	        android:layout_width="24dp"
	        android:layout_height="24dp"
	        android:background="@drawable/eben_bg_play" />
    	<ImageButton
	        android:id="@+id/btn_pause"
	        android:layout_width="24dp"
	        android:layout_height="24dp"
	        android:background="@drawable/eben_bg_pause"
	        android:visibility="gone"/>
    
	    <LinearLayout
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"        
		    android:layout_weight="1"
    		android:layout_marginLeft="10dip"
    		android:layout_marginRight="10dip"
		    android:orientation="vertical"
		    android:gravity="center"
		    android:background="@drawable/eben_border_left_right">
		    
	        <ProgressBar 
		        android:id="@+id/sound_progress"
		        android:layout_width="match_parent"
		        android:layout_height="4dip"
		        android:layout_marginTop="10dip"
	    		android:layout_marginLeft="15dip"
	    		android:layout_marginRight="15dip"
		        style="?android:attr/progressBarStyleHorizontal"
		        android:progressDrawable="@drawable/eben_progressbar" /> 
	
	        <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
		        <TextView
			        android:id="@+id/play_time"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"        
		    		android:layout_weight="1"
		    		android:layout_marginLeft="15dip"
			        android:text="00:00:00"        
			        android:textSize="12sp"
			        android:textColor="#78694e"/>    
			    <TextView
			        android:id="@+id/play_time_total"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"        
		    		android:layout_weight="1"
    				android:layout_marginRight="15dip"
		    		android:gravity="right"
			        android:text="00:00:00"        
			        android:textSize="12sp"
			        android:textColor="#78694e"/>
			</LinearLayout> 
	    </LinearLayout> 
	    <ImageButton
			android:id="@+id/btn_delete"
			android:layout_width="24dp"
			android:layout_height="24dp"
    		android:layout_marginRight="10dip"
			android:background="@drawable/eben_bg_clear"/>
	    <ImageButton
			android:id="@+id/btn_close_annot"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:background="@drawable/eben_bg_close"/>
	</LinearLayout>
</LinearLayout><!-- From: file:/D:/DEMO/trunk/iAppPDFLib/res/layout/eben_voice_record.xml -->