<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/status_bar">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/main_tab1"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="工作"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/main_tabnum1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/main_tab1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="3"
            android:textColor="@color/status_bar"
            android:background="@drawable/num_background"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/main_tab2"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="新闻"
            android:textColor="@color/white2"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/main_tab3"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="日程"
            android:textColor="@color/white2"/>
        <TextView
            android:id="@+id/main_tabnum3"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/main_tab3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="3"
            android:textColor="@color/status_bar"
            android:background="@drawable/num_background"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/main_tab4"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="通讯录"
            android:textColor="@color/white2"/>
    </RelativeLayout>
</LinearLayout>