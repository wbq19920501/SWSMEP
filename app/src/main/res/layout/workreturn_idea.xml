<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height"
        android:orientation="horizontal"
        android:background="@color/status_bar">
        <LinearLayout
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/back"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/work_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:text="办理"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_sub"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textColor="@color/white"
            android:background="@drawable/btn_exit"/>
        <View
            android:layout_above="@id/btn_sub"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/line_background2"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_above="@id/btn_sub"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="通过"
                    android:gravity="center_vertical"
                    android:drawableRight="@mipmap/dg"
                    android:paddingLeft="35dp"
                    android:drawablePadding="5dp"
                    android:textColor="@drawable/btn_workcolorclick"
                    android:background="@drawable/btn_workclick"/>
                <Button
                    android:id="@id/btn_cancel"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="退回"
                    android:gravity="center_vertical"
                    android:drawableRight="@mipmap/dg"
                    android:paddingLeft="35dp"
                    android:drawablePadding="5dp"
                    android:textColor="@drawable/btn_workcolor"
                    android:background="@drawable/btn_work"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"/>
                <EditText
                    android:id="@+id/add_context"
                    android:layout_toRightOf="@id/add_work1"
                    android:hint="意见内容"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine"
                    android:gravity="left|top"
                    android:textColorHint="@color/work_textcolor"
                    android:textColor="@color/phone_textcolor"
                    android:background="@null"/>
                <Button
                    android:id="@+id/me_msg"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="常用语"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/white"
                    android:drawableLeft="@mipmap/add_useful_expressions"
                    android:background="@drawable/useful_expressions"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/add_work2"
                    android:paddingLeft="10dp"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@mipmap/add_work2"/>
                <LinearLayout
                    android:id="@+id/file_list"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_toRightOf="@id/add_work2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/choose_file"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="50dp">
                        <TextView
                            android:id="@+id/file_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:textColor="@color/work_textcolor"
                            android:text="附件添加"/>
                        <ImageView
                            android:id="@+id/add_file"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/add_wrok3_file"/>
                    </RelativeLayout>
                    <ListView
                        android:id="@+id/files_list"
                        android:divider="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </ListView>
                </LinearLayout>
                <View
                    android:layout_below="@id/add_work2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>