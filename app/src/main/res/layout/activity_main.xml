<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/status_bar">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:id="@+id/mian_menuleft"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/menu"/>
                    <TextView
                        android:layout_toRightOf="@id/mian_menuleft"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/white"
                        android:text="@string/main_title"/>
                    <ImageView
                        android:id="@+id/main_menuright"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/btn_search_normal"/>
                    <LinearLayout
                        android:id="@+id/main_date"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/years"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/main_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textSize="20dp"
                                android:text="2016年"
                                android:textColor="@color/white"/>
                            <ImageView
                                android:layout_marginBottom="15dp"
                                android:layout_alignParentBottom="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/main_year"
                                android:background="@drawable/spinner_selector"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/months"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/main_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textSize="20dp"
                                android:text="1月"
                                android:textColor="@color/white"/>
                            <ImageView
                                android:layout_marginBottom="15dp"
                                android:layout_alignParentBottom="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/main_month"
                                android:background="@drawable/spinner_selector"/>
                        </RelativeLayout>
                        <!--<Spinner
                            android:layout_marginLeft="10dp"
                            android:id="@+id/main_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:dropDownVerticalOffset="-50dp"
                            android:visibility="gone"
                            android:entries="@array/month"/>-->
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/tab1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/main_tab1"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="工作"
                            android:textSize="@dimen/main_tab"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/main_tabnum1"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_toRightOf="@+id/main_tab1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="3"
                            android:visibility="gone"
                            android:textColor="@color/status_bar"
                            android:background="@drawable/num_background"/>
                        <View
                            android:id="@+id/tab_view1"
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="@color/white"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/tab2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/main_tab2"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="新闻"
                            android:textSize="@dimen/main_tab"
                            android:textColor="@color/white2"/>
                        <View
                            android:id="@+id/tab_view2"
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:visibility="gone"
                            android:background="@color/white"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/tab3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/main_tab3"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="日程"
                            android:textSize="@dimen/main_tab"
                            android:textColor="@color/white2"/>
                        <TextView
                            android:id="@+id/main_tabnum3"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_toRightOf="@+id/main_tab3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="3"
                            android:visibility="gone"
                            android:textColor="@color/status_bar"
                            android:background="@drawable/num_background"/>
                        <View
                            android:id="@+id/tab_view3"
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="@color/white"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/tab4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/main_tab4"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="通讯录"
                            android:textSize="@dimen/main_tab"
                            android:textColor="@color/white2"/>
                        <View
                            android:id="@+id/tab_view4"
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:visibility="gone"
                            android:background="@color/white"/>
                    </RelativeLayout>
                </LinearLayout>
                <!--<include android:id="@+id/main_title"-->
                    <!--layout="@layout/main_tab"/>-->
                <!--<android.support.design.widget.TabLayout
                    android:id="@+id/main_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="bottom"
                    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:tabIndicatorColor="@color/white" />-->
            </LinearLayout>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/line_background"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/main_viewpager"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/menu_left"
        android:layout_gravity="left"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@mipmap/menu_leftbg"
            android:orientation="horizontal">
            <!--<com.jokeep.swsmep.view.CustomImageView-->
                <!--android:id="@+id/use_img"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--android:layout_width="60dp"-->
                <!--android:layout_height="60dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:src="@mipmap/ic_launcher"-->
                <!--app:border_width="2dp"-->
                <!--app:border_color="@color/transparent"/>-->
            <com.jokeep.swsmep.view.RoundImageView
                android:id="@+id/use_img"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/use_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="督查中心"/>
                <TextView
                    android:id="@+id/use_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="督查中心"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/upload_img"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@mipmap/menu_man"
            android:paddingLeft="18dp"
            android:text="上传头像"
            android:gravity="left|center"
            android:drawablePadding="20dp"
            android:background="@drawable/btn_menu"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/menu_line"/>
        <Button
            android:id="@+id/change_psd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="18dp"
            android:drawableLeft="@mipmap/menu_set"
            android:text="修改密码"
            android:gravity="left|center"
            android:drawablePadding="20dp"
            android:background="@drawable/btn_menu"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/menu_line"/>
        <Button
            android:id="@+id/chang_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="18dp"
            android:drawableLeft="@mipmap/menu_change"
            android:text="切换账号"
            android:gravity="left|center"
            android:drawablePadding="22dp"
            android:background="@drawable/btn_menu"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/menu_line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/use_exit"
                android:layout_alignParentBottom="true"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="退出"
                android:textColor="@color/white"
                android:background="@drawable/btn_exit"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
