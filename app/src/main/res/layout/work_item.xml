<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="80dp">
    <TextView
        android:id="@+id/work_name"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/work_round"
        android:text="收文"
        android:textSize="20dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/work_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是标题啊。。。。。。"
        android:layout_toRightOf="@id/work_name"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/work_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是内容。。。。。。。"
        android:layout_toRightOf="@id/work_name"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp"
        android:ellipsize="end"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/work_num"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="2"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/work_round"/>
    <ImageView
        android:id="@+id/work_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/abc_ab_share_pack_mtrl_alpha"/>
</RelativeLayout>