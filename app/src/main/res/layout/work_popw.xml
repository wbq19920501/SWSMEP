<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/pop_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="20dp"
        >
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/anim1"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:text="跟踪事项"/>
            <ImageButton
                android:id="@+id/img1"
                android:layout_toRightOf="@id/text1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/work_menu1"
                android:src="@mipmap/work_img4"/>
            <TextView
                android:id="@+id/num1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="1"
                android:gravity="center"
                android:background="@drawable/round"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/anim2"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:text="公文办理"/>
            <ImageButton
                android:id="@+id/img2"
                android:layout_toRightOf="@id/text2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/work_menu2"
                android:src="@mipmap/work_img3"/>
            <TextView
                android:id="@+id/num2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="2"
                android:gravity="center"
                android:background="@drawable/round"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/anim3"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:text="协同工作"/>
            <ImageButton
                android:id="@+id/img3"
                android:layout_toRightOf="@id/text3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/work_menu3"
                android:src="@mipmap/work_img2"/>
            <TextView
                android:id="@+id/num3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="3"
                android:gravity="center"
                android:background="@drawable/round"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>