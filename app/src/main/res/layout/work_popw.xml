<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rl_genzong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="11dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/bt_genzong"
                android:layout_width="59dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/work_img4"
                android:layout_centerInParent="true"
                android:layout_marginBottom="18dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/track_foce"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@id/bt_genzong"
                android:background="@drawable/button_frame"
                android:textSize="16dp"
                android:textColor="@color/phone_textcolor"
                android:text="跟踪事项"/>

            <Button
                android:id="@+id/bt_genzong_num"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="16dp"
                android:layout_toLeftOf="@id/bt_genzong"
                android:background="@drawable/round"
                android:text="2"
                android:textSize="15dp"
                android:textColor="#ffffff"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_gongwen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="11dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/bt_gongwen"
                android:layout_width="59dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/work_img3"
                android:layout_marginBottom="18dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/official_face"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@id/bt_gongwen"
                android:textSize="16dp"
                android:textColor="@color/phone_textcolor"
                android:background="@drawable/button_frame"
                android:text="公文办理"/>

            <Button
                android:id="@+id/bt_gongwen_num"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="16dp"
                android:layout_toLeftOf="@id/bt_gongwen"
                android:background="@drawable/round"
                android:text="2"
                android:textSize="15dp"
                android:textColor="#ffffff"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_xitong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="11dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/bt_xitong"
                android:layout_width="59dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="18dp"
                android:src="@mipmap/work_img2"
                android:layout_marginRight="20dp"
                android:background="@drawable/synergy_foce"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@id/bt_xitong"
                android:textSize="16dp"
                android:textColor="@color/phone_textcolor"
                android:background="@drawable/button_frame"
                android:text="协同工作"/>

            <Button
                android:id="@+id/bt_xitong_num"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="16dp"
                android:layout_toLeftOf="@id/bt_xitong"
                android:background="@drawable/round"
                android:text="2"
                android:textSize="15dp"
                android:textColor="#ffffff"/>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>