<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_buttons"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="#FFFFFF" >

        <RelativeLayout
            android:id="@+id/layout_annotation_add"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/selector_btn_stroke"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon_add"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:background="@mipmap/icon_pen" />

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@id/icon_add"
                android:gravity="center_vertical"
                android:text="全文签批"
                android:textColor="@color/selector_text_btn"
                android:textSize="@dimen/size_small" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_annotation_delete"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/layout_annotation_add"
            android:background="@drawable/selector_btn_stroke"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon_delete"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:background="@mipmap/icon_delete" />

            <TextView
                android:id="@+id/tv_deletesign"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@id/icon_delete"
                android:gravity="center_vertical"
                android:text="删除批注"
                android:textColor="@color/selector_text_btn"
                android:textSize="@dimen/size_small" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_file"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/selector_btn_stroke"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/icon_file"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:background="@mipmap/havefile" />

            <TextView
                android:id="@+id/text_file"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@id/icon_file"
                android:gravity="center_vertical"
                android:text="  附件"
                android:textColor="@color/selector_text_btn"
                android:textSize="@dimen/size_small" />
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/book_frame"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"/>

</LinearLayout>