        <activity android:name=".base.PdfShowerActivity" android:screenOrientation="portrait"/>
        <activity android:name=".base.BillPdfShowerActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.ChangePassdActivity"
            android:windowSoftInputMode="adjustResize|adjustPan"
            android:screenOrientation="portrait"/>
        <activity android:name=".photo.CropImageActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.PhoneManActivity"
            android:screenOrientation="portrait"/>
